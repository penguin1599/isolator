FROM nvidia/cuda:12.8.0-runtime-ubuntu22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Create symbolic links for python
RUN ln -sf /usr/bin/python3.10 /usr/bin/python

# Set working directory
WORKDIR /app

# Install libsndfile for soundfile audio backend
RUN apt-get update && apt-get install -y libsndfile1 && rm -rf /var/lib/apt/lists/*

# Install PyTorch nightly with CUDA 12.8 (supports RTX 5090/Blackwell sm_120) and Demucs
# Install torchcodec from nightly to match the PyTorch version
RUN pip3 install --no-cache-dir --pre \
    torch torchaudio --index-url https://download.pytorch.org/whl/nightly/cu128 \
    && pip3 install --no-cache-dir --pre torchcodec --index-url https://download.pytorch.org/whl/nightly/cu128 \
    && pip install --no-cache-dir scipy soundfile demucs

# Copy application code
COPY clean_audio.py .

# Set entrypoint
ENTRYPOINT ["python", "clean_audio.py"]
